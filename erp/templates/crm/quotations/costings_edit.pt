<tr class="edit-row">
    <td colspan="4">
        ${form.begin(request.route_url("action", action="costings_row", module="crm", cls="quotations"), \
                class_="table-form", novalidate="novalidate", id="costings-form", data_row_id=row_id)}
            <table class="table table-condensed">
                <colgroup>
                    <col class="col-ctrl"/>
                    <col class="col-auto"/>
                    <col class="col-auto"/>
                    <col style="width:100px"/>
                    <col style="width:140px"/>
                    <col style="width:140px"/>
                </colgroup>
                <tbody>
                    <tr>
                        <td class="table-menu">
                            <a data-cmd="update" href="#"><i class="fa fa-check"></i></a>
                            <a data-cmd="cancel" href="#"><i class="fa fa-close"></i></a>
                        </td>
                        <td>${form.select("group", groups, class_="form-control", prompt="Select Group")}</td>
                        <td>${form.text("description", class_="form-control", placeholder="Enter Description")}</td>
                        <td>${form.select("currency", currencies, class_="form-control", prompt="Currency")}</td>
                        <td>${form.text("rate", class_="form-control", placeholder="Rate")}</td>
                        <td>${form.select("unit", units, class_="form-control", prompt="Select Unit")}</td>
                    </tr>
                </tbody>
            </table>
            ${form.csrf()}
            ${form.hidden("row_id", row_id)}
            ${form.hidden("id")}
        ${form.end()}
    </td>
</tr>