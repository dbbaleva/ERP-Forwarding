<tr tal:define="name 'costings-%d' % int(row_id)" data-row-id="${row_id}" class="display-row">
    <td class="table-menu">
        <a data-cmd="add" href="#"><i class="fa fa-plus"></i></a>
        <a data-cmd="delete" href="#" data-row-id="${row_id}"><i class="fa fa-remove"></i></a>
        <tal:block tal:repeat="key list(costing.keys())">
            <input type="hidden" id="${name}.${key}" name="${name}.${key}" value="${costing.get(key)}">
        </tal:block>
    </td>
    <td>${costing.group}</td>
    <td>${costing.description}</td>
    <td>
        ${costing.currency}
        ${'{:0,.2f}'.format(float(costing.rate))}${
                '/' + costing.unit if costing.unit else ''}
    </td>
</tr>
