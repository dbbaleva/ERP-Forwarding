<tr class="edit-row">
    <td colspan="3">
        ${form.begin(request.route_url("action", action="misc_row", module="options", cls="companies"), \
                class_="table-form", novalidate="novalidate", id="misc-form", data_row_id=row_id)}
            <table class="table table-condensed">
                <colgroup>
                    <col class="col-ctrl"/>
                    <col class="col-auto"/>
                    <col class="col-auto"/>
                </colgroup>
                <tbody>
                    <tr>
                        <td class="table-menu">
                            <a data-cmd="update" href="#"><i class="fa fa-check"></i></a>
                            <a data-cmd="cancel" href="#"><i class="fa fa-close"></i></a>
                        </td>
                        <td>${form.text("name", class_="form-control", placeholder="Name")}</td>
                        <td>${form.text("description", class_="form-control", placeholder="Description")}</td>
                    </tr>
                </tbody>
            </table>
            ${form.csrf()}
            ${form.hidden("row_id", row_id)}
            ${form.hidden("id")}
        ${form.end()}
    </td>
</tr>